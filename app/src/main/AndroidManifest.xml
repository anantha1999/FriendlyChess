<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chessfever.friendlychess">

    <application
        android:allowBackup="true"
        android:icon="@drawable/chessicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name="com.chessfever.friendlychess.Black" android:screenOrientation="portrait"></activity>
        <activity android:name="com.chessfever.friendlychess.White" android:screenOrientation="portrait"/>
        <activity android:name="com.chessfever.friendlychess.Join" android:screenOrientation="portrait"/>
        <activity android:name="com.chessfever.friendlychess.Create" android:screenOrientation="portrait"/>
        <activity android:name="com.chessfever.friendlychess.Home" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>