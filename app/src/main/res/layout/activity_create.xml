<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context=".Create">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="313dp"
        android:layout_height="504dp"
        android:alpha="0.8"
        android:background="#9D9D9D"
        android:padding="100dp"
        android:paddingStart="100dp"
        android:paddingLeft="100dp"
        android:paddingTop="100dp"
        android:paddingEnd="100dp"
        android:paddingRight="100dp"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <TextView
        android:id="@+id/code"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:alpha="0.9"
        android:background="#1F1F1F"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.04"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/copy"
        android:layout_width="28dp"
        android:layout_height="29dp"
        app:layout_constraintBottom_toBottomOf="@+id/code"
        app:layout_constraintEnd_toEndOf="@+id/code"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/code"
        app:layout_constraintTop_toTopOf="@+id/code"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="?attr/actionModeCopyDrawable" />

    <ImageView
        android:id="@+id/white"
        android:layout_width="84dp"
        android:layout_height="133dp"
        android:alpha="08"
        android:background="@drawable/circleshadowoff"
        android:outlineAmbientShadowColor="#D2CECE"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.191" />

    <ImageView
        android:id="@+id/black"
        android:layout_width="84dp"
        android:layout_height="132dp"
        android:background="@drawable/circleshadowoff"
        android:outlineAmbientShadowColor="#D2CECE"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/whiteText"
        android:layout_width="51dp"
        android:layout_height="29dp"
        android:text="WHITE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/white"
        app:layout_constraintEnd_toEndOf="@+id/white"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/white"
        app:layout_constraintTop_toTopOf="@+id/white"
        app:layout_constraintVertical_bias="0.528"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/blackText"
        android:layout_width="54dp"
        android:layout_height="28dp"
        android:text="BLACK"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/black"
        app:layout_constraintEnd_toEndOf="@+id/black"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="@+id/black"
        app:layout_constraintTop_toTopOf="@+id/black"
        app:layout_constraintVertical_bias="0.519"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:text="Colour :"
        android:textAlignment="center"
        android:textColor="#1F1F1F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.268"
        android:gravity="center_horizontal" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/waiting"
        android:layout_width="225dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:text="Waiting for opponent"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        android:gravity="center_horizontal" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/minutes"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:stepSize="1"
        android:theme="@style/button3"
        android:value="30.0"
        android:valueFrom="0"
        android:valueTo="60"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.57" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/bonus"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:stepSize="1"
        android:theme="@style/button3"
        android:value="30.0"
        android:valueFrom="0"
        android:valueTo="60"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.767" />

    <Button
        android:id="@+id/create"
        android:layout_width="112dp"
        android:layout_height="51dp"
        android:alpha="0.9"
        android:text="create"
        android:textColor="#FFFFFF"
        android:theme="@style/button3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.973" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="89dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:text="Minutes :"
        android:textAlignment="textStart"
        android:textColor="#1F1F1F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/minutes"
        app:layout_constraintEnd_toEndOf="@+id/minutes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/minutes"
        android:gravity="start" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="89dp"
        android:layout_height="29dp"
        android:text="Bonus :"
        android:textAlignment="textStart"
        android:textColor="#1F1F1F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bonus"
        app:layout_constraintEnd_toEndOf="@+id/bonus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bonus"
        android:gravity="start" />

    <TextView
        android:id="@+id/bonusValue"
        android:layout_width="89dp"
        android:layout_height="29dp"
        android:textAlignment="viewStart"
        android:textColor="#005270"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bonus"
        app:layout_constraintEnd_toEndOf="@+id/bonus"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        android:gravity="start" />

    <TextView
        android:id="@+id/minutesValue"
        android:layout_width="89dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="viewStart"
        android:textColor="#005270"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/minutes"
        app:layout_constraintEnd_toEndOf="@+id/minutes"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        android:gravity="start" />

    <Switch
        android:id="@+id/timerSwitch"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:theme="@style/button3"
        app:layout_constraintBottom_toTopOf="@+id/create"
        app:layout_constraintEnd_toEndOf="@+id/bonus"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toEndOf="@+id/timerText"
        app:layout_constraintTop_toBottomOf="@+id/bonus"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="142dp"
        android:layout_height="38dp"
        android:text="Timer : OFF"
        android:textAlignment="textStart"
        android:textColor="#1F1F1F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/create"
        app:layout_constraintEnd_toEndOf="@+id/bonus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bonus"
        app:layout_constraintTop_toBottomOf="@+id/bonus"
        app:layout_constraintVertical_bias="0.0"
        android:gravity="start" />

</androidx.constraintlayout.widget.ConstraintLayout>